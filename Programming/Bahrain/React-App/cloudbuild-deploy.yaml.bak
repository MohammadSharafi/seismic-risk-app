steps:
  # Build the React app
  - name: 'node:20-alpine'
    entrypoint: 'sh'
    args:
      - '-c'
      - |
        cd /workspace
        npm ci
        npm run build
    id: 'build-frontend'

  # Build Docker image
  - name: 'gcr.io/cloud-builders/docker'
    args:
      - 'build'
      - '-t'
      - 'gcr.io/$PROJECT_ID/twincare-frontend:latest'
      - '.'
    id: 'build-image'
    waitFor: ['build-frontend']

  # Push the image
  - name: 'gcr.io/cloud-builders/docker'
    args: ['push', 'gcr.io/$PROJECT_ID/twincare-frontend:latest']
    id: 'push-image'
    waitFor: ['build-image']

  # Deploy to Cloud Run (backend URL will be set after backend deployment)
  - name: 'gcr.io/google.com/cloudsdktool/cloud-sdk'
    entrypoint: gcloud
    args:
      - 'run'
      - 'deploy'
      - 'twincare-frontend'
      - '--image'
      - 'gcr.io/$PROJECT_ID/twincare-frontend:latest'
      - '--platform'
      - 'managed'
      - '--region'
      - 'us-central1'
      - '--allow-unauthenticated'
      - '--min-instances'
      - '0'
      - '--max-instances'
      - '10'
      - '--memory'
      - '512Mi'
      - '--cpu'
      - '1'
      - '--port'
      - '80'
    id: 'deploy-cloud-run'
    waitFor: ['push-image']

images:
  - 'gcr.io/$PROJECT_ID/twincare-frontend:latest'

timeout: 1200s
